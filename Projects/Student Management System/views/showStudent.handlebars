<div class="row m-0 py-5 px-3 text-center justify-content-center">
  {{#each std}}
  <div class="col-md-3 mb-4 justify-content-center">
    <div class="shadow card mb-3" style="max-width: 15rem;">
      <div class="card-header">Student # {{null}}</div>
      <div class="card-body text-dark">
        <div class="d-flex justify-content-between mb-2">
          <h5 class="card-title">Name:</h5>
          <p class="card-text">{{this.name}}</p>
        </div>
        <div class="d-flex justify-content-between mb-2">
          <h5 class="card-title">Rollno:</h5>
          <p class="card-text">{{this.rollno}}</p>
        </div>
        <div class="d-flex justify-content-between mb-2">
          <h5 class="card-title">Department:</h5>
          <p class="card-text">{{this.dept}}</p>
        </div>
        <div class="d-flex justify-content-between mb-3">
          <h5 class="card-title">GPA:</h5>
          <p class="card-text">{{this.gpa}}</p>
        </div>
        <div class="d-flex justify-content-between">
          <a href="/showStudent/update/{{this._id}}" class="btn btn-success">
            Update</a>
          <a href="/showStudent/{{this._id}}" class="btn btn-outline-danger">Delete</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>